                <uie:ObjectField label="Sprite" type="UnityEngine.Sprite, UnityEngine.CoreModule" name="BackgroundImage" tooltip="Background image of the image." focusable="false" class="mp_font mp_textColor_normal mp_objectField" />
                <Editor.Scripts.GUI.Factories.TextSecondary tabindex="-1" text="1920 x 1080" name="ImageResolution" display-tooltip-when-elided="true" tooltip="Resolution of the selected background image." style="margin-left: 15px; font-size: 10px;" />
